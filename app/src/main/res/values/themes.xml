<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ugithub" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_main</item>
        <item name="colorPrimaryVariant">@color/blue_darker</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:windowBackground">@color/background_main</item>
        <item name="imageButtonStyle">@style/ImageButton</item>
        <item name="android:textViewStyle">@style/ItborneoText</item>

    </style>

    <style name="ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:padding">@dimen/padding_layout</item>
    </style>

    <style name="ItborneoText">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ItborneoText.AppTitle">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ItborneoText.Title">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ItborneoText.TitleSecondary">
        <item name="android:textColor">@color/text_black</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ItborneoText.Subtitle">
        <item name="android:textColor">@color/text_black_second</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ItborneoText.Text">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ItemTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>