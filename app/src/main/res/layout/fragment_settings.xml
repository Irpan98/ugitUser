<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView

            android:id="@+id/tb_settings"
            style="@style/ItborneoText.AppTitle"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/padding_layout"
            android:text="@string/settings" />

        <LinearLayout
            android:id="@+id/ll_change_language"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/padding_layout"
            android:paddingVertical="@dimen/padding_layout_half">

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:layout_margin="2dp"
                android:backgroundTint="@color/blue_main"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="@string/language"
                    android:src="@drawable/ic_languange"
                    app:tint="@color/white" />
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="@dimen/padding_layout_half"
                android:paddingEnd="0dp">

                <TextView
                    style="@style/ItborneoText.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/language" />

                <TextView
                    android:id="@+id/tv_language"
                    style="@style/ItborneoText.Subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/language" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_daily_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/padding_layout"
            android:paddingVertical="@dimen/padding_layout_half"
            android:paddingTop="@dimen/padding_layout_half">


            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:layout_margin="2dp"
                android:backgroundTint="@color/blue_main"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="@string/notification"
                    android:src="@drawable/ic_notifications"

                    app:tint="@color/white" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="@dimen/padding_layout_half"
                android:paddingEnd="0dp">

                <TextView
                    android:id="@+id/textView2"
                    style="@style/ItborneoText.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/daily_reminder" />

                <TextView
                    android:id="@+id/textView4"
                    style="@style/ItborneoText.Subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/info_daily" />

            </LinearLayout>


            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/sw_daily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
