<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_shimmer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    shimmer:duration="700"
    shimmer:shimmer_auto_start="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_layout">

        <TextView
            style="@style/ItborneoText.TitleSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            style="@style/ItborneoText.TitleSecondary"
            android:layout_width="100dp"
            android:layout_marginTop="@dimen/padding_layout_half"
            android:background="@color/grey"
            android:paddingVertical="4dp" />

        <TextView
            style="@style/ItborneoText.Text"
            android:layout_width="100dp"
            android:layout_marginTop="@dimen/padding_layout_half"
            android:background="@color/grey" />

        <TextView
            style="@style/ItborneoText.Text"
            android:layout_width="100dp"
            android:layout_marginTop="@dimen/padding_layout_half"
            android:background="@color/grey"
            android:drawablePadding="5dp"
            android:gravity="center_vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_layout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/padding_layout"
                android:layout_weight="1"
                android:background="@color/grey"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/padding_layout"
                android:layout_weight="1"
                android:background="@color/grey" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/padding_layout"
                android:layout_weight="1"
                android:background="@color/grey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/followers" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/following" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/repositories" />
        </LinearLayout>
    </LinearLayout>
</com.facebook.shimmer.ShimmerFrameLayout>
